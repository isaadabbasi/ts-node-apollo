{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [ "dom","es6" ],
    "module": "commonjs", 
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "target": "es6",
  },
  "exclude": [ "node_modules" ],
  "include": [ "src/**/*.ts" ],
  "paths": {
    "src/*": ["*"]
  }
}
